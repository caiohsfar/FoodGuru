<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".estabelecimento.GUI.ConfigSeuPSActivity"
    android:background="@color/VerdeFoodGuru">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_informativo_tipodeconta"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:text="Configure sua conta Pag Seguro para continuar"
            android:textSize="20sp"
            style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header"
            android:textColor="@color/Branco"
            android:paddingRight="15sp"
            android:paddingLeft="15sp"
            android:gravity="center"/>
    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="35dp"
        android:textSize="17dp"
        android:background="@drawable/borda_redonda_bt_branco"
        android:text="Configurar"
        android:textColor="@color/Cinza" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="227dp"
        android:src="@drawable/ic_add_white_24dp" />

    <ImageView
        android:layout_width="155dp"
        android:layout_height="154dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_food_guru_new_logo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="155dp"
        android:layout_height="154dp"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="-10dp"
        android:src="@drawable/psfg"/>
</RelativeLayout>