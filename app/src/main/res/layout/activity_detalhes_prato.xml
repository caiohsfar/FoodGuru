<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".estabelecimento.GUI.DetalhesPratoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/ivDetalhesImagemPrato"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/RoxoFoodGuru"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/etDetalhesNomePrato"
        android:layout_width="match_parent"

        android:layout_height="55sp"
        android:drawableLeft="@drawable/ic_prato"

        android:enabled="false"

        android:drawablePadding="15sp"

        android:drawableTint="@color/RoxoFoodGuru"
        android:hint="Nome do Prato"

        android:padding="15sp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etDetalhesDescricaoPrato"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"

        android:drawableLeft="@drawable/ic_descricao"

        android:drawablePadding="15sp"
        android:drawableTint="@color/RoxoFoodGuru"
        android:hint="Descrição do Prato"

        android:padding="15sp" />

</LinearLayout>