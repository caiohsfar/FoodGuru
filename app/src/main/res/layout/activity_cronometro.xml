<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cliente.GUI.CronometroActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarCronometro"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/LaranjaFoodGuru"
        android:gravity="center"
        android:elevation="4dp"
        android:foregroundTint="@color/Branco"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/ic_food_guru"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/nome_prato_cro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOME DO PRATO"
            android:textColor="@color/LaranjaFoodGuru"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/cronometro_novo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seu prato estÃ¡ chegando!"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/fila_cro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tem 5 pedidos na frente do seu"
            android:textSize="18dp"
            android:textColor="@color/RoxoFoodGuru"/>
    </LinearLayout>



</LinearLayout>