<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtNomePrato"
            android:layout_width="149dp"
            android:layout_height="33dp"
            android:layout_above="@+id/txtQuantidade"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="-64dp"
            android:text="Nome do prato"
            android:textColor="@color/RoxoFoodGuru"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/txtQuantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/txtNumeroMesa"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"
            android:text="quantidade: 50"
            android:textColor="@color/LaranjaFoodGuru"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtNumeroMesa"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="217dp"
            android:layout_marginLeft="217dp"
            android:layout_marginTop="26dp"
            android:text="Mesa: 35"
            android:textColor="@color/LaranjaFoodGuru"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="57dp"
            android:background="@color/RoxoFoodGuru"></View>

        <TextView
            android:id="@+id/tv_observacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginBottom="32dp"
            android:text="Sem verduras, por favor"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/LaranjaFoodGuru" />

        <ImageView
            android:id="@+id/menu_item"
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="320dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/ic_menu"
            android:scaleType="centerCrop" />

    </RelativeLayout>
</android.support.v7.widget.CardView>