<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivImagemPrato"
        android:textColor="@color/Branco"
        android:gravity="center"
        android:background="@drawable/borda_redonda_bt_roxo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/ivImagemPrato">
        <TextView
            android:id="@+id/tvNomePrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_nome_prato"
            android:gravity="center_vertical"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvDescicaoPrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="descrição do prato"
            android:textColor="@color/RoxoFoodGuru"
            android:textSize="16dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>
</RelativeLayout>