<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/progress_bar_recycler_prato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:progressDrawable="@color/Branco" />
    <ImageView
        android:id="@+id/ivImagemPrato"
        android:textColor="@color/Branco"
        android:gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/ivImagemPrato">
        <TextView
            android:id="@+id/tvNomePrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_nome_prato"
            android:textAllCaps="true"
            android:textColor="@color/LaranjaFoodGuru"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvDescicaoPrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descrição do prato"
            android:maxLines="2"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_preco_prato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$0,00"
            android:textSize="18dp"
            android:textColor="@color/RoxoFoodGuru"
            android:singleLine="true"/>
    </LinearLayout>
</RelativeLayout>